<div class="navbar">
  <% if user_signed_in? %>
    <div class="navbar-block"><%= @date.strftime("%A, %B %e") %></div>
  <% else %>
    <div class="navbar-block"></div>
  <% end %>
  <div class="navbar-block">
    <h1>Task Manager</h1>
  </div>
  <div class="navbar-block">
    <ul class="zero-margins">
      <% if user_signed_in? %>
        <li>
          <div>
            <%= link_to "Log out", destroy_user_session_path, method: :delete %>
          </div>
        </li>
      <% else %>
        <li>
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
